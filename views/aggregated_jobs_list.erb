<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item active">Lavori Aggregati</li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <h1><i class="fas fa-layer-group"></i> Lavori Aggregati</h1>
  </div>
  <div class="col-md-4 text-end">
    <a href="/aggregated_jobs/new" class="btn btn-primary">
      <i class="fas fa-plus"></i> Crea Aggregazione
    </a>
  </div>
</div>

<% if params[:msg] %>
  <% alert_type = case params[:msg]
    when 'success'
      'success'
    else
      'danger'
    end %>
  <div class="alert alert-<%= alert_type %> alert-dismissible fade show" role="alert">
    <%= params[:text]&.gsub('+', ' ') %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<div class="row mb-3">
  <div class="col-md-12">
    <div class="btn-group" role="group">
      <span class="badge bg-secondary me-2">In Attesa: <%= AggregatedJob.pending.count %></span>
      <span class="badge bg-info me-2">Aggregazione: <%= AggregatedJob.aggregating.count %></span>
      <span class="badge bg-warning me-2">Pronto Stampa: <%= AggregatedJob.ready_for_print.count %></span>
      <span class="badge bg-primary me-2">In Stampa: <%= AggregatedJob.printing.count %></span>
      <span class="badge bg-success me-2">Completati: <%= AggregatedJob.completed.count %></span>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @aggregated_jobs.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>File</th>
              <th>Flusso</th>
              <th>Stato</th>
              <th>Creato</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% @aggregated_jobs.each do |job| %>
              <tr>
                <td><strong>#<%= job.id %></strong></td>
                <td><%= job.name %></td>
                <td>
                  <span class="badge bg-info"><%= job.nr_files %> file</span>
                </td>
                <td>
                  <% if job.print_flow %>
                    <small><%= job.print_flow.name %></small>
                  <% else %>
                    <small class="text-muted">-</small>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-<%= job.status_color %>">
                    <%= job.status_label %>
                  </span>
                </td>
                <td><small class="text-muted"><%= job.created_at.strftime('%d/%m %H:%M') %></small></td>
                <td>
                  <a href="/aggregated_jobs/<%= job.id %>" class="btn btn-sm btn-info" title="Visualizza">
                    <i class="fas fa-eye"></i>
                  </a>
                  <% if !['pending', 'completed'].include?(job.status) %>
                    <form action="/aggregated_jobs/<%= job.id %>/reset" method="post" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-warning" title="Resetta a In Attesa" onclick="return confirm('Resettare questa aggregazione?')">
                        <i class="fas fa-redo"></i>
                      </button>
                    </form>
                  <% end %>
                  <% if job.status != 'completed' %>
                    <form action="/aggregated_jobs/<%= job.id %>" method="post" style="display:inline;">
                      <input type="hidden" name="_method" value="delete">
                      <button type="submit" class="btn btn-sm btn-danger" title="Elimina" onclick="return confirm('Elimina questa aggregazione?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">Nessun lavoro aggregato. <a href="/aggregated_jobs/new">Crea uno</a></p>
    <% end %>
  </div>
</div>
