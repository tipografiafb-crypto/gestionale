<% if params[:error].present? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= params[:error] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<div class="container mt-4">
  <h1>Crea Ordine Manuale</h1>
  
  <form method="post" action="/orders" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="row mb-4">
      <div class="col-md-6">
        <label for="store_id" class="form-label">Negozio *</label>
        <select class="form-select" id="store_id" name="store_id" required>
          <option value="">-- Seleziona negozio --</option>
          <% @stores.each do |store| %>
            <option value="<%= store.id %>"><%= store.name %></option>
          <% end %>
        </select>
      </div>
      
      <div class="col-md-6">
        <label for="order_code" class="form-label">Codice Ordine *</label>
        <input type="text" class="form-control" id="order_code" name="order_code" required placeholder="es. ORD-123456">
      </div>
    </div>

    <hr class="my-4">
    
    <h4>Item Ordine</h4>
    <div id="items-container">
      <div class="item-row mb-3 p-3 border rounded" style="background-color: #f8f9fa;">
        <div class="row mb-2">
          <div class="col-md-5">
            <label class="form-label">Prodotto (SKU) *</label>
            <select class="form-select product-select" name="items[][sku]" required>
              <option value="">-- Seleziona prodotto --</option>
              <% @products.each do |product| %>
                <option value="<%= product.sku %>" title="<%= product.name %>">
                  <%= product.sku %> - <%= product.name %>
                </option>
              <% end %>
            </select>
          </div>
          
          <div class="col-md-3">
            <label class="form-label">Quantit√† *</label>
            <input type="number" class="form-control" name="items[][quantity]" min="1" value="1" required>
          </div>
          
          <div class="col-md-4">
            <label class="form-label">&nbsp;</label>
            <button type="button" class="btn btn-outline-danger w-100 remove-item-btn" style="display: none;">
              üóë Rimuovi
            </button>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label class="form-label">üìé File (immagine/PDF)</label>
            <input type="file" class="form-control" name="items[][file]" accept="image/*,.pdf">
            <small class="text-muted">Opzionale - Carica immagine o PDF</small>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <button type="button" class="btn btn-outline-primary" id="add-item-btn">
        ‚ûï Aggiungi Item
      </button>
    </div>

    <hr class="my-4">
    
    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary">
        ‚úÖ Crea Ordine
      </button>
      <a href="/orders" class="btn btn-secondary">
        ‚Üê Annulla
      </a>
    </div>
  </form>
</div>

<style>
  .item-row {
    position: relative;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('items-container');
  const addBtn = document.getElementById('add-item-btn');
  const products = <%= @products.to_json %>;
  
  function createItemRow() {
    const row = document.createElement('div');
    row.className = 'item-row mb-3 p-3 border rounded';
    row.style.backgroundColor = '#f8f9fa';
    
    row.innerHTML = `
      <div class="row mb-2">
        <div class="col-md-5">
          <label class="form-label">Prodotto (SKU) *</label>
          <select class="form-select product-select" name="items[][sku]" required>
            <option value="">-- Seleziona prodotto --</option>
            ${products.map(p => `<option value="${p.sku}" title="${p.name}">${p.sku} - ${p.name}</option>`).join('')}
          </select>
        </div>
        
        <div class="col-md-3">
          <label class="form-label">Quantit√† *</label>
          <input type="number" class="form-control" name="items[][quantity]" min="1" value="1" required>
        </div>
        
        <div class="col-md-4">
          <label class="form-label">&nbsp;</label>
          <button type="button" class="btn btn-outline-danger w-100 remove-item-btn">
            üóë Rimuovi
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <label class="form-label">üìé File (immagine/PDF)</label>
          <input type="file" class="form-control" name="items[][file]" accept="image/*,.pdf">
          <small class="text-muted">Opzionale - Carica immagine o PDF</small>
        </div>
      </div>
    `;
    
    row.querySelector('.remove-item-btn').addEventListener('click', function(e) {
      e.preventDefault();
      row.remove();
      updateRemoveButtons();
    });
    
    container.appendChild(row);
    updateRemoveButtons();
  }
  
  function updateRemoveButtons() {
    const rows = container.querySelectorAll('.item-row');
    rows.forEach(row => {
      const btn = row.querySelector('.remove-item-btn');
      btn.style.display = rows.length > 1 ? 'block' : 'none';
    });
  }
  
  addBtn.addEventListener('click', function(e) {
    e.preventDefault();
    createItemRow();
  });
  
  updateRemoveButtons();
});
</script>
