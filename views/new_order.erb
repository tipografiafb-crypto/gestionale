<% if params[:error].present? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= params[:error] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<div class="container mt-4">
  <% is_edit = @order.present? %>
  <h1><%= is_edit ? "Modifica Ordine" : "Crea Ordine Manuale" %></h1>
  
  <form method="post" action="<%= is_edit ? "/orders/#{@order.id}" : "/orders" %>" class="needs-validation" novalidate enctype="multipart/form-data">
    <% if is_edit %>
      <input type="hidden" name="_method" value="PUT">
    <% end %>
    <div class="row mb-4">
      <div class="col-md-6">
        <label for="store_id" class="form-label">Negozio *</label>
        <select class="form-select" id="store_id" name="store_id" required <%= is_edit ? "disabled" : "" %>>
          <option value="">-- Seleziona negozio --</option>
          <% @stores.each do |store| %>
            <option value="<%= store.id %>" <%= is_edit && @order.store_id == store.id ? "selected" : "" %>><%= store.name %></option>
          <% end %>
        </select>
        <% if is_edit %>
          <input type="hidden" name="store_id" value="<%= @order.store_id %>">
        <% end %>
      </div>
      
      <div class="col-md-6">
        <label for="order_code" class="form-label">Codice Ordine *</label>
        <input type="text" class="form-control" id="order_code" name="order_code" required placeholder="es. ORD-123456" value="<%= is_edit ? @order.external_order_code : "" %>">
      </div>
    </div>

    <hr class="my-4">
    
    <h4>Item Ordine</h4>
    <div id="items-container">
      <% if is_edit && @order.order_items.any? %>
        <% @order.order_items.each_with_index do |item, item_index| %>
          <div class="item-row mb-3 p-3 border rounded" style="background-color: #f8f9fa;">
            <div class="row mb-2">
              <div class="col-md-5">
                <label class="form-label">Prodotto (SKU) *</label>
                <select class="form-select product-select" name="items[][sku]" required>
                  <option value="">-- Seleziona prodotto --</option>
                  <% @products.each do |product| %>
                    <option value="<%= product.sku %>" title="<%= product.name %>" <%= product.sku == item.sku ? "selected" : "" %>>
                      <%= product.sku %> - <%= product.name %>
                    </option>
                  <% end %>
                </select>
              </div>
              
              <div class="col-md-3">
                <label class="form-label">Quantità *</label>
                <input type="number" class="form-control" name="items[][quantity]" min="1" value="<%= item.quantity %>" required>
              </div>
              
              <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <button type="button" class="btn btn-outline-danger w-100 remove-item-btn" <%= @order.order_items.count == 1 ? "style='display: none;'" : "" %>>
                  <i class="fas fa-trash"></i> Rimuovi
                </button>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <label class="form-label"><i class="fas fa-paperclip"></i> File (immagine/PDF) - Multipli</label>
                <div class="files-container">
                  <% if item.assets.any? %>
                    <% item.assets.each do |asset| %>
                      <div class="file-input-group mb-2 existing-file-group" data-asset-id="<%= asset.id %>">
                        <div class="input-group">
                          <input type="text" class="form-control" value="<%= asset.original_url %>" disabled>
                          <button type="button" class="btn btn-outline-danger btn-sm delete-file-btn" title="Cancella questo file">
                            <i class="fas fa-times"></i>
                          </button>
                          <input type="hidden" class="delete-asset-id" name="items[][delete_asset_ids][]" value="">
                          <small class="text-muted ms-2 mt-2">(file esistente)</small>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                  <div class="file-input-group mb-2">
                    <input type="file" class="form-control" name="items[][files][]" accept=".png,.jpg,.jpeg,.pdf">
                  </div>
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary add-file-btn">
                  <i class="fas fa-plus"></i> Aggiungi File
                </button>
                <small class="text-muted d-block mt-2">Opzionale - PNG, JPG, JPEG, PDF - Puoi caricare più file</small>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="item-row mb-3 p-3 border rounded" style="background-color: #f8f9fa;">
          <div class="row mb-2">
            <div class="col-md-5">
              <label class="form-label">Prodotto (SKU) *</label>
              <select class="form-select product-select" name="items[][sku]" required>
                <option value="">-- Seleziona prodotto --</option>
                <% @products.each do |product| %>
                  <option value="<%= product.sku %>" title="<%= product.name %>">
                    <%= product.sku %> - <%= product.name %>
                  </option>
                <% end %>
              </select>
            </div>
            
            <div class="col-md-3">
              <label class="form-label">Quantità *</label>
              <input type="number" class="form-control" name="items[][quantity]" min="1" value="1" required>
            </div>
            
            <div class="col-md-4">
              <label class="form-label">&nbsp;</label>
              <button type="button" class="btn btn-outline-danger w-100 remove-item-btn" style="display: none;">
                <i class="fas fa-trash"></i> Rimuovi
              </button>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <label class="form-label"><i class="fas fa-paperclip"></i> File (immagine/PDF) - Multipli</label>
              <div class="files-container">
                <div class="file-input-group mb-2">
                  <input type="file" class="form-control" name="items[][files][]" accept=".png,.jpg,.jpeg,.pdf">
                </div>
              </div>
              <button type="button" class="btn btn-sm btn-outline-secondary add-file-btn">
                <i class="fas fa-plus"></i> Aggiungi File
              </button>
              <small class="text-muted d-block mt-2">Opzionale - PNG, JPG, JPEG, PDF - Puoi caricare più file</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <button type="button" class="btn btn-outline-primary" id="add-item-btn">
        <i class="fas fa-plus"></i> Aggiungi Item
      </button>
    </div>

    <hr class="my-4">
    
    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-check-circle"></i> <%= is_edit ? "Salva Modifiche" : "Crea Ordine" %>
      </button>
      <a href="<%= is_edit ? "/orders/#{@order.id}" : "/orders" %>" class="btn btn-secondary">
        ← Annulla
      </a>
    </div>
  </form>
</div>

<style>
  .item-row {
    position: relative;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('items-container');
  const addBtn = document.getElementById('add-item-btn');
  const products = <%= @products.to_json %>;
  
  function createItemRow() {
    const row = document.createElement('div');
    row.className = 'item-row mb-3 p-3 border rounded';
    row.style.backgroundColor = '#f8f9fa';
    
    row.innerHTML = `
      <div class="row mb-2">
        <div class="col-md-5">
          <label class="form-label">Prodotto (SKU) *</label>
          <select class="form-select product-select" name="items[][sku]" required>
            <option value="">-- Seleziona prodotto --</option>
            ${products.map(p => `<option value="${p.sku}" title="${p.name}">${p.sku} - ${p.name}</option>`).join('')}
          </select>
        </div>
        
        <div class="col-md-3">
          <label class="form-label">Quantità *</label>
          <input type="number" class="form-control" name="items[][quantity]" min="1" value="1" required>
        </div>
        
        <div class="col-md-4">
          <label class="form-label">&nbsp;</label>
          <button type="button" class="btn btn-outline-danger w-100 remove-item-btn">
            <i class="fas fa-trash"></i> Rimuovi
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <label class="form-label"><i class="fas fa-paperclip"></i> File (immagine/PDF) - Multipli</label>
          <div class="files-container">
            <div class="file-input-group mb-2">
              <input type="file" class="form-control" name="items[][files][]" accept=".png,.jpg,.jpeg,.pdf">
            </div>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary add-file-btn">
            <i class="fas fa-plus"></i> Aggiungi File
          </button>
          <small class="text-muted d-block mt-2">Opzionale - PNG, JPG, JPEG, PDF - Puoi caricare più file</small>
        </div>
      </div>
    `;
    
    row.querySelector('.remove-item-btn').addEventListener('click', function(e) {
      e.preventDefault();
      row.remove();
      updateRemoveButtons();
    });
    
    container.appendChild(row);
    updateRemoveButtons();
  }
  
  function updateRemoveButtons() {
    const rows = container.querySelectorAll('.item-row');
    rows.forEach(row => {
      const btn = row.querySelector('.remove-item-btn');
      btn.style.display = rows.length > 1 ? 'block' : 'none';
    });
  }
  
  addBtn.addEventListener('click', function(e) {
    e.preventDefault();
    createItemRow();
  });
  
  // File adding functionality
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('add-file-btn')) {
      e.preventDefault();
      const filesContainer = e.target.previousElementSibling;
      const fileGroup = document.createElement('div');
      fileGroup.className = 'file-input-group mb-2';
      fileGroup.innerHTML = `
        <div class="input-group">
          <input type="file" class="form-control" name="items[][files][]" accept=".png,.jpg,.jpeg,.pdf">
          <button type="button" class="btn btn-outline-danger remove-file-btn">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      `;
      filesContainer.appendChild(fileGroup);
    }
    if (e.target.classList.contains('remove-file-btn')) {
      e.preventDefault();
      e.target.closest('.file-input-group').remove();
    }
    
    // Delete existing file button
    if (e.target.closest('.delete-file-btn')) {
      e.preventDefault();
      const fileGroup = e.target.closest('.existing-file-group');
      const assetId = fileGroup.getAttribute('data-asset-id');
      const hiddenInput = fileGroup.querySelector('.delete-asset-id');
      if (hiddenInput) {
        hiddenInput.value = assetId;
      }
      fileGroup.style.opacity = '0.5';
      fileGroup.style.textDecoration = 'line-through';
      e.target.closest('.delete-file-btn').disabled = true;
      e.target.closest('.delete-file-btn').classList.add('disabled');
    }
  });
  
  updateRemoveButtons();
});
</script>
