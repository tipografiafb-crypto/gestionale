<div class="mb-6">
  <nav class="flex gap-2 text-sm text-gray-600">
    <a href="/orders" class="text-blue-600 hover:text-blue-800">Ordini</a>
    <span>/</span>
    <span class="text-gray-900 font-semibold"><%= @order.external_order_code %></span>
  </nav>
</div>

<div class="mb-6 flex justify-between items-start">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Ordine: <%= @order.external_order_code %></h1>
    <p class="text-gray-600 mt-1">Dettagli e gestione ordine di stampa</p>
  </div>
  <form action="/orders/<%= @order.id %>" method="post" class="inline" onsubmit="return confirm('Sei sicuro? Eliminerai completamente questo ordine.');">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition">
      üóë Elimina Ordine
    </button>
  </form>
</div>

<div class="grid grid-cols-3 gap-6 mb-6">
  <!-- Left Column - Order Info -->
  <div class="col-span-2">
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">üìã Informazioni Ordine</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-600">ID</p>
          <p class="font-mono text-sm text-gray-900"><%= @order.id %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Codice Esterno</p>
          <p class="font-semibold text-gray-900"><%= @order.external_order_code %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Negozio</p>
          <p class="text-gray-900"><%= @order.store.code %> - <%= @order.store.name %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Stato</p>
          <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold status-<%= @order.status %>">
            <%= @order.status.gsub('_', ' ').upcase %>
          </span>
        </div>
        <div>
          <p class="text-sm text-gray-600">Creato</p>
          <p class="text-gray-900"><%= @order.created_at.strftime('%d-%m-%Y %H:%M:%S') %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">Modificato</p>
          <p class="text-gray-900"><%= @order.updated_at.strftime('%d-%m-%Y %H:%M:%S') %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">üìù Note</h2>
      <% if @order.notes.present? %>
        <div class="text-gray-700 whitespace-pre-wrap"><%= @order.notes %></div>
      <% else %>
        <p class="text-gray-500 italic">Nessuna nota</p>
      <% end %>
    </div>
  </div>

  <!-- Right Column - Switch Job -->
  <div>
    <% if @order.switch_job %>
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">‚öôÔ∏è Switch Job</h2>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-600">Job ID</p>
            <p class="font-mono text-sm text-gray-900"><%= @order.switch_job.switch_job_id || 'N/A' %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600">Status</p>
            <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
              <%= @order.switch_job.status&.upcase || 'UNKNOWN' %>
            </span>
          </div>
          <% if @order.switch_job.result_preview_url %>
            <div>
              <a href="<%= @order.switch_job.result_preview_url %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View Preview ‚Üí</a>
            </div>
          <% end %>
          <% if @order.switch_job.log.present? %>
            <div class="mt-4">
              <p class="text-sm text-gray-600 mb-2">Log</p>
              <div class="log-box"><%= @order.switch_job.log %></div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
        <p class="text-blue-800 font-semibold text-sm">Non ancora inviato a Switch</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Items Section -->
<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">üì¶ Articoli Ordine (<%= @order.order_items.count %>)</h2>
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-4 py-3 text-left font-semibold text-gray-700">SKU</th>
          <th class="px-4 py-3 text-left font-semibold text-gray-700">Prodotto</th>
          <th class="px-4 py-3 text-left font-semibold text-gray-700">Quantit√†</th>
          <th class="px-4 py-3 text-left font-semibold text-gray-700">Asset</th>
          <th class="px-4 py-3 text-left font-semibold text-gray-700">Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |item| %>
          <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
            <td class="px-4 py-3 font-mono text-xs text-gray-700"><%= item.product_sku %></td>
            <td class="px-4 py-3 text-gray-900"><%= item.product_name %></td>
            <td class="px-4 py-3 text-gray-900"><%= item.quantity %></td>
            <td class="px-4 py-3">
              <span class="inline-block px-2 py-1 rounded text-xs font-semibold bg-gray-100 text-gray-800">
                <%= item.assets.count %>
              </span>
            </td>
            <td class="px-4 py-3">
              <a href="/line_items/<%= item.id %>" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Dettagli ‚Üí</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Assets Section -->
<% if @order.assets.present? %>
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">üñºÔ∏è Asset (<%= @order.assets.count %>)</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @order.assets.each do |asset| %>
        <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition">
          <% if asset.downloaded? && File.exist?(asset.local_path_full) %>
            <a href="/file/<%= asset.id %>" target="_blank" class="block">
              <img src="/file/<%= asset.id %>" alt="<%= asset.filename %>" class="w-full h-32 object-cover">
            </a>
          <% else %>
            <div class="w-full h-32 bg-gray-100 flex items-center justify-center">
              <span class="text-gray-400 text-2xl">üìÅ</span>
            </div>
          <% end %>
          <div class="p-3 bg-gray-50">
            <p class="text-xs font-mono text-gray-700 truncate"><%= asset.filename %></p>
            <p class="text-xs text-gray-500 mt-1">
              <% if asset.downloaded? %>
                <span class="text-green-600">‚úì Downloaded</span>
              <% else %>
                <span class="text-yellow-600">‚è≥ Pending</span>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
