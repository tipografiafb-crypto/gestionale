<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item"><a href="/aggregated_jobs">Lavori Aggregati</a></li>
      <li class="breadcrumb-item active">Crea Nuova Aggregazione</li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-12">
    <h1><i class="fas fa-plus"></i> Crea Nuova Aggregazione</h1>
  </div>
</div>

<% if params[:msg] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= params[:text]&.gsub('+', ' ') %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<form action="/aggregated_jobs" method="post">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <strong><i class="fas fa-file-alt"></i> Seleziona Line Items</strong>
        </div>
        <div class="card-body">
          <p class="text-muted">Scegli almeno 2 line items con pre-stampa completata:</p>
          
          <% if @available_items.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><input type="checkbox" id="select-all" onclick="toggleAll(this)"></th>
                    <th>Ordine</th>
                    <th>Prodotto</th>
                    <th>Quantità</th>
                    <th>Status Pre-stampa</th>
                  </tr>
                </thead>
                <tbody>
                  <% @available_items.each do |item| %>
                    <tr>
                      <td>
                        <input type="checkbox" name="item_ids[]" value="<%= item.id %>" class="item-checkbox">
                      </td>
                      <td><strong><%= item.order.code %></strong></td>
                      <td><%= item.sku %></td>
                      <td><%= item.quantity %></td>
                      <td>
                        <span class="badge bg-success">✓ Completata</span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <small class="text-muted"><%= @available_items.count %> line items disponibili</small>
          <% else %>
            <div class="alert alert-info">
              Nessun line item con pre-stampa completata. Completa la pre-stampa per alcuni ordini prima di creare un'aggregazione.
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <strong><i class="fas fa-cogs"></i> Configurazione</strong>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label for="name" class="form-label">Nome Aggregazione</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="es: Aggregazione Prodotto X">
            <small class="text-muted">Opzionale - se non inserito, verrà generato automaticamente</small>
          </div>

          <div id="selected-count" class="alert alert-info">
            <strong>Selezionati:</strong> <span id="count">0</span> item
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary" id="submit-btn" disabled>
              <i class="fas fa-check"></i> Crea Aggregazione
            </button>
            <a href="/aggregated_jobs" class="btn btn-outline-secondary">
              <i class="fas fa-times"></i> Annulla
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
function toggleAll(checkbox) {
  document.querySelectorAll('.item-checkbox').forEach(cb => cb.checked = checkbox.checked);
  updateCount();
}

function updateCount() {
  const count = document.querySelectorAll('.item-checkbox:checked').length;
  document.getElementById('count').textContent = count;
  document.getElementById('submit-btn').disabled = count < 2;
}

document.querySelectorAll('.item-checkbox').forEach(cb => cb.addEventListener('change', updateCount));
</script>
