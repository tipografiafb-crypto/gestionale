<% if params[:error].present? %>
  <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700 mb-4">
    <%= params[:error] %>
  </div>
<% end %>

<div class="max-w-4xl">
  <h1 class="text-3xl font-bold mb-6">Crea Ordine Manuale</h1>
  
  <form method="post" action="/orders" enctype="multipart/form-data" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label for="store_id" class="block text-sm font-semibold text-gray-700 mb-2">Negozio *</label>
        <select class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="store_id" name="store_id" required>
          <option value="">-- Seleziona negozio --</option>
          <% @stores.each do |store| %>
            <option value="<%= store.id %>"><%= store.name %></option>
          <% end %>
        </select>
      </div>
      
      <div>
        <label for="order_code" class="block text-sm font-semibold text-gray-700 mb-2">Codice Ordine *</label>
        <input type="text" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="order_code" name="order_code" required placeholder="es. ORD-123456">
      </div>
    </div>

    <div class="border-t pt-6">
      <h4 class="text-lg font-semibold text-gray-800 mb-4">Item Ordine</h4>
      <div id="items-container">
        <div class="item-row mb-3 p-4 border border-gray-300 rounded-lg bg-gray-50">
          <div class="grid grid-cols-1 md:grid-cols-5 gap-3 mb-3">
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-gray-700 mb-1">Prodotto (SKU) *</label>
              <select class="w-full border border-gray-300 rounded px-3 py-2 text-sm product-select" name="items[][sku]" required>
                <option value="">-- Seleziona prodotto --</option>
                <% @products.each do |product| %>
                  <option value="<%= product.sku %>" title="<%= product.name %>">
                    <%= product.sku %> - <%= product.name %>
                  </option>
                <% end %>
              </select>
            </div>
            
            <div class="md:col-span-1">
              <label class="block text-sm font-semibold text-gray-700 mb-1">Quantit√† *</label>
              <input type="number" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" name="items[][quantity]" min="1" value="1" required>
            </div>
            
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-gray-700 mb-1">&nbsp;</label>
              <button type="button" class="w-full bg-red-100 hover:bg-red-200 text-red-700 px-3 py-2 rounded font-semibold text-sm transition remove-item-btn hidden">
                üóë Rimuovi
              </button>
            </div>
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">üìé File (immagine/PDF)</label>
            <input type="file" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" name="items[][file]" accept=".png,.jpg,.jpeg,.pdf">
            <small class="text-gray-600">Opzionale - PNG, JPG, JPEG, PDF</small>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <button type="button" class="bg-blue-100 hover:bg-blue-200 text-blue-700 px-4 py-2 rounded font-semibold transition text-sm" id="add-item-btn">
          ‚ûï Aggiungi Item
        </button>
      </div>
    </div>

    <div class="border-t pt-6 flex gap-3">
      <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition">
        ‚úÖ Crea Ordine
      </button>
      <a href="/orders" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-lg font-semibold transition inline-block">
        ‚Üê Annulla
      </a>
    </div>
  </form>
</div>

<style>
  .item-row {
    position: relative;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('items-container');
  const addBtn = document.getElementById('add-item-btn');
  const products = <%= @products.to_json %>;
  
  function createItemRow() {
    const row = document.createElement('div');
    row.className = 'item-row mb-3 p-3 border rounded';
    row.style.backgroundColor = '#f8f9fa';
    
    row.innerHTML = `
      <div class="row mb-2">
        <div class="col-md-5">
          <label class="form-label">Prodotto (SKU) *</label>
          <select class="form-select product-select" name="items[][sku]" required>
            <option value="">-- Seleziona prodotto --</option>
            ${products.map(p => `<option value="${p.sku}" title="${p.name}">${p.sku} - ${p.name}</option>`).join('')}
          </select>
        </div>
        
        <div class="col-md-3">
          <label class="form-label">Quantit√† *</label>
          <input type="number" class="form-control" name="items[][quantity]" min="1" value="1" required>
        </div>
        
        <div class="col-md-4">
          <label class="form-label">&nbsp;</label>
          <button type="button" class="btn btn-outline-danger w-100 remove-item-btn">
            üóë Rimuovi
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <label class="form-label">üìé File (immagine/PDF)</label>
          <input type="file" class="form-control" name="items[][file]" accept=".png,.jpg,.jpeg,.pdf">
          <small class="text-muted">Opzionale - PNG, JPG, JPEG, PDF</small>
        </div>
      </div>
    `;
    
    row.querySelector('.remove-item-btn').addEventListener('click', function(e) {
      e.preventDefault();
      row.remove();
      updateRemoveButtons();
    });
    
    container.appendChild(row);
    updateRemoveButtons();
  }
  
  function updateRemoveButtons() {
    const rows = container.querySelectorAll('.item-row');
    rows.forEach(row => {
      const btn = row.querySelector('.remove-item-btn');
      btn.style.display = rows.length > 1 ? 'block' : 'none';
    });
  }
  
  addBtn.addEventListener('click', function(e) {
    e.preventDefault();
    createItemRow();
  });
  
  updateRemoveButtons();
});
</script>
