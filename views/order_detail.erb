<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item active"><%= @order.external_order_code %></li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <h1>Order: <%= @order.external_order_code %></h1>
  </div>
  <div class="col-md-4">
    <div class="d-flex flex-column gap-2">
      <a href="/orders/<%= @order.id %>/print" class="btn btn-outline-info" target="_blank">
        <i class="fas fa-file-invoice"></i> Scheda Ordine
      </a>
      <a href="/orders/<%= @order.id %>/edit" class="btn btn-outline-primary">
        <i class="fas fa-edit"></i> Modifica
      </a>
      <form action="/orders/<%= @order.id %>/force_close" method="post" onsubmit="return confirm('Forzare la chiusura di questo ordine?');">
        <button type="submit" class="btn btn-success w-100">
          <i class="fas fa-lock"></i> Forza Chiusura
        </button>
      </form>
      <form action="/orders/<%= @order.id %>" method="post" onsubmit="return confirm('Sei sicuro? Eliminerai completamente questo ordine.');">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger w-100">
          <i class="fas fa-trash"></i> Delete
        </button>
      </form>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <strong>Order Information</strong>
      </div>
      <div class="card-body">
        <table class="table table-sm table-borderless">
          <tr>
            <th>ID:</th>
            <td><%= @order.id %></td>
          </tr>
          <tr>
            <th>External Code:</th>
            <td><strong><%= @order.external_order_code %></strong></td>
          </tr>
          <tr>
            <th>Store:</th>
            <td><%= @order.store.code %> (<%= @order.store.name %>)</td>
          </tr>
          <tr>
            <th>Status:</th>
            <td>
              <span class="badge status-badge status-<%= @order.status %>">
                <%= @order.status.gsub('_', ' ').upcase %>
              </span>
            </td>
          </tr>
          <tr>
            <th>Created:</th>
            <td><%= @order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
          <tr>
            <th>Updated:</th>
            <td><%= @order.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <strong>Note Ordine</strong>
      </div>
      <div class="card-body">
        <textarea class="form-control" id="orderNotes" rows="6" placeholder="Aggiungi una nota..." style="font-size: 13px; font-family: monospace; white-space: pre-wrap;"><%= @order.customer_note %></textarea>
        <div style="display: flex; gap: 8px; margin-top: 12px;">
          <button class="btn btn-primary btn-sm" onclick="saveOrderNotes(<%= @order.id %>)">
            <i class="fas fa-save"></i> Salva
          </button>
          <button class="btn btn-outline-secondary btn-sm" onclick="resetOrderNotes('<%= @order.customer_note %>'); return false;">
            <i class="fas fa-undo"></i> Annulla
          </button>
        </div>
        <div id="noteSaveMessage" style="margin-top: 10px; display: none;"></div>
      </div>
    </div>

    <% if @order.switch_job %>
      <div class="card mb-4">
        <div class="card-header">
          <strong>Switch Job</strong>
        </div>
        <div class="card-body">
          <table class="table table-sm table-borderless">
            <tr>
              <th>Job ID:</th>
              <td><%= @order.switch_job.switch_job_id || 'N/A' %></td>
            </tr>
            <tr>
              <th>Status:</th>
              <td><span class="badge bg-secondary"><%= @order.switch_job.status&.upcase %></span></td>
            </tr>
            <% if @order.switch_job.result_preview_url %>
              <tr>
                <th>Preview:</th>
                <td><a href="<%= @order.switch_job.result_preview_url %>" target="_blank">View Preview</a></td>
              </tr>
            <% end %>
          </table>
          <% if @order.switch_job.log.present? %>
            <h6>Log:</h6>
            <div class="log-box"><%= @order.switch_job.log %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h3 class="mt-5 mb-3">Jobs (<%= @order.order_items.count %>)</h3>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead class="table-light">
      <tr>
        <th>SKU / Product</th>
        <th>Quantity</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr onclick="window.location.href='/orders/<%= @order.id %>/items/<%= item.id %>';" style="cursor: pointer;">
          <td>
            <strong><%= item.product&.name || item.sku %></strong><br>
            <small class="text-muted"><%= item.sku %></small>
          </td>
          <td><%= item.quantity %></td>
          <td>
            <% if item.preprint_completed_at && item.print_completed_at %>
              <span class="badge bg-success"><i class="fas fa-check"></i> Completed</span>
            <% elsif item.preprint_status == 'failed' || item.print_status == 'failed' %>
              <span class="badge bg-danger">âœ— Failed</span>
            <% elsif item.preprint_status == 'processing' || item.print_status == 'processing' %>
              <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half"></i> Processing</span>
            <% else %>
              <span class="badge bg-secondary">Pending</span>
            <% end %>
          </td>
          <td>
            <a href="/orders/<%= @order.id %>/items/<%= item.id %>" class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation();">
              <i class="fas fa-copy"></i> Open Job
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
function saveOrderNotes(orderId) {
  const noteText = document.getElementById('orderNotes').value;
  const messageDiv = document.getElementById('noteSaveMessage');
  
  fetch(`/orders/${orderId}/update_notes`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/x-www-form-urlencoded'
    },
    body: `customer_note=${encodeURIComponent(noteText)}`
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      messageDiv.style.display = 'block';
      messageDiv.innerHTML = '<div class="alert alert-success" role="alert"><i class="fas fa-check-circle"></i> Note salvate!</div>';
      setTimeout(() => {
        messageDiv.style.display = 'none';
      }, 3000);
    } else {
      messageDiv.style.display = 'block';
      messageDiv.innerHTML = `<div class="alert alert-danger" role="alert"><i class="fas fa-exclamation-circle"></i> Errore: ${data.error}</div>`;
    }
  })
  .catch(err => {
    messageDiv.style.display = 'block';
    messageDiv.innerHTML = `<div class="alert alert-danger" role="alert"><i class="fas fa-exclamation-circle"></i> Errore di connessione</div>`;
  });
}

function resetOrderNotes(originalNote) {
  document.getElementById('orderNotes').value = originalNote;
  document.getElementById('noteSaveMessage').style.display = 'none';
}
</script>
