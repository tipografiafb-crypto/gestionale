    .status-done { @apply bg-green-100 text-green-800; }
    .status-error { @apply bg-red-100 text-red-800; }
    .asset-preview { @apply max-w-[100px] max-h-[100px] object-cover border border-gray-300 rounded; }
    .log-box { @apply bg-gray-50 border border-gray-300 rounded p-4 font-mono text-sm whitespace-pre-wrap max-h-80 overflow-y-auto; }
  </style>
