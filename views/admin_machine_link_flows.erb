<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h2>ðŸ”— Collega Macchina a Flussi di Stampa</h2>
      <p class="text-muted">Macchina: <strong><%= @machine.name %></strong></p>

      <form action="/admin/print_machines/<%= @machine.id %>/link_flows" method="post" class="card p-4">
        <p class="mb-3">Seleziona i flussi di stampa a cui questa macchina deve essere disponibile:</p>

        <div class="list-group">
          <% @print_flows.each do |flow| %>
            <div class="form-check list-group-item">
              <input class="form-check-input" type="checkbox" name="flow_ids[]" 
                     value="<%= flow.id %>" id="flow_<%= flow.id %>"
                     <%= 'checked' if @linked_flow_ids.include?(flow.id) %>>
              <label class="form-check-label" for="flow_<%= flow.id %>">
                <strong><%= flow.name %></strong>
                <br><small class="text-muted"><%= flow.products.count %> prodotti</small>
              </label>
            </div>
          <% end %>
        </div>

        <div class="mt-4 d-flex gap-2">
          <button type="submit" class="btn btn-primary">ðŸ’¾ Salva Associazioni</button>
          <a href="/admin/print_machines" class="btn btn-secondary">Annulla</a>
        </div>
      </form>
    </div>
  </div>
</div>
