<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6"><%= @category&.id ? "Modifica Categoria" : "Nuova Categoria" %></h1>

  <% if @error %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-700 mb-4"><%= @error %></div>
  <% end %>

  <form action="<%= @category&.id ? "/product_categories/#{@category.id}" : "/product_categories" %>" method="post" class="space-y-4">
    <% if @category&.id %>
      <input type="hidden" name="_method" value="PUT">
    <% end %>

    <div>
      <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Nome Categoria *</label>
      <input type="text" class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="name" name="name" value="<%= @category&.name %>" required>
      <small class="text-gray-600">Es: "Plettri", "Poster", "Magneti"</small>
    </div>

    <div>
      <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Descrizione</label>
      <textarea class="w-full border border-gray-300 rounded px-3 py-2 text-sm" id="description" name="description" rows="3"><%= @category&.description %></textarea>
    </div>

    <div class="flex items-center gap-2">
      <input type="checkbox" class="border border-gray-300 rounded" id="active" name="active" value="true" <%= @category&.active? ? 'checked' : '' %>>
      <label for="active" class="text-sm font-semibold text-gray-700">Attivo</label>
    </div>

    <div class="flex gap-3 pt-4">
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition">ðŸ’¾ Salva Categoria</button>
      <a href="/product_categories" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg font-semibold transition inline-block">Annulla</a>
    </div>
  </form>
</div>
