<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-store"></i> Negozi</h1>
  <a href="/stores/new" class="btn btn-primary">+ Nuovo Negozio</a>
</div>

<% if params[:success] %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Negozio <strong><%= params[:success].upcase %></strong> con successo!
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<% if params[:msg] %>
  <div class="alert alert-<%= params[:msg] == 'success' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
    <%= params[:text]&.gsub('+', ' ') %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<div class="card">
  <div class="card-body">
    <% if @stores.empty? %>
      <p class="text-muted mb-0">Nessun negozio configurato. <a href="/stores/new">Creane uno nuovo</a></p>
    <% else %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Codice</th>
              <th>Nome</th>
              <th>Ordini</th>
              <th>Stato</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% @stores.each do |store| %>
              <tr>
                <td><strong><code><%= store.code %></code></strong></td>
                <td><%= store.name %></td>
                <td><span class="badge bg-info"><%= store.orders.count %></span></td>
                <td><%= store.active.nil? || store.active? ? '<i class="fas fa-check-circle"></i> Attivo' : '⏸️ Inattivo' %></td>
                <td>
                  <a href="/stores/<%= store.id %>/edit" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Modifica</a>
                  <% if store.orders.empty? %>
                    <form action="/stores/<%= store.id %>" method="post" style="display:inline;">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancellare questo negozio?')"><i class="fas fa-trash"></i> Cancella</button>
                    </form>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% if @stores.any? && @total_pages > 1 %>
          <div class="card-footer bg-white text-center pt-3">
            <nav>
              <ul class="pagination pagination-sm mb-0 justify-content-center">
                <% if @current_page > 1 %>
                  <li class="page-item"><a class="page-link" href="/stores?page=<%= @current_page - 1 %>">← Precedente</a></li>
                <% else %>
                  <li class="page-item disabled"><span class="page-link">← Precedente</span></li>
                <% end %>
                <li class="page-item disabled"><span class="page-link"><%= @current_page %> / <%= @total_pages %></span></li>
                <% if @current_page < @total_pages %>
                  <li class="page-item"><a class="page-link" href="/stores?page=<%= @current_page + 1 %>">Successivo →</a></li>
                <% else %>
                  <li class="page-item disabled"><span class="page-link">Successivo →</span></li>
                <% end %>
              </ul>
            </nav>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<hr>
<a href="/" class="btn btn-secondary">← Torna alla Home</a>
