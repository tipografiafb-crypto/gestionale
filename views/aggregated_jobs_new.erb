<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item"><a href="/aggregated_jobs">Lavori Aggregati</a></li>
      <li class="breadcrumb-item active">Crea Nuova Aggregazione</li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-12">
    <h1><i class="fas fa-plus"></i> Crea Nuova Aggregazione</h1>
    <p class="text-muted">Seleziona almeno 2 line items con pre-stampa completata per aggregarli in un unico lavoro.</p>
  </div>
</div>

<% if params[:msg] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= params[:text]&.gsub('+', ' ') %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<form action="/aggregated_jobs" method="post">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <strong><i class="fas fa-file-alt"></i> Seleziona Line Items</strong>
        </div>
        <div class="card-body">
          <% if @available_items.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><input type="checkbox" id="select-all" onclick="toggleAll(this)"></th>
                    <th>Ordine</th>
                    <th>Prodotto</th>
                    <th>Quantità</th>
                    <th>File</th>
                  </tr>
                </thead>
                <tbody>
                  <% @available_items.each do |item| %>
                    <tr onclick="toggleRow(this)" style="cursor: pointer;">
                      <td>
                        <input type="checkbox" name="item_ids[]" value="<%= item.id %>" class="item-checkbox" onclick="event.stopPropagation();">
                      </td>
                      <td><strong><%= item.order.code %></strong></td>
                      <td><%= item.sku %></td>
                      <td><%= item.quantity %></td>
                      <td>
                        <% asset = item.assets.where(asset_type: 'preprint').first || item.assets.order(created_at: :desc).first %>
                        <% if asset %>
                          <span class="badge bg-success"><i class="fas fa-check"></i></span>
                        <% else %>
                          <span class="badge bg-warning">-</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <small class="text-muted"><%= @available_items.count %> line items disponibili per aggregazione</small>
          <% else %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i> Nessun line item disponibile per l'aggregazione. 
              <br><small>Completa la pre-stampa per alcuni ordini prima di creare un'aggregazione.</small>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <strong><i class="fas fa-cogs"></i> Configurazione</strong>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label for="name" class="form-label">Nome Aggregazione</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="es: Aggregazione Prodotto X">
            <small class="text-muted">Opzionale - se non inserito, verrà generato automaticamente</small>
          </div>

          <div class="mb-3">
            <label for="print_flow_id" class="form-label">Flusso di Stampa (opzionale)</label>
            <select class="form-select" id="print_flow_id" name="print_flow_id">
              <option value="">-- Nessuno --</option>
              <% @print_flows.each do |pf| %>
                <option value="<%= pf.id %>"><%= pf.name %></option>
              <% end %>
            </select>
            <small class="text-muted">Il flusso da usare per la stampa del file aggregato</small>
          </div>

          <div id="selected-count" class="alert alert-info">
            <strong>Selezionati:</strong> <span id="count">0</span> item
            <br><small id="min-warning" class="text-danger" style="display:none;">Minimo 2 item richiesti</small>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary" id="submit-btn" disabled>
              <i class="fas fa-check"></i> Crea Aggregazione
            </button>
            <a href="/aggregated_jobs" class="btn btn-outline-secondary">
              <i class="fas fa-times"></i> Annulla
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
function toggleAll(checkbox) {
  document.querySelectorAll('.item-checkbox').forEach(cb => cb.checked = checkbox.checked);
  updateCount();
}

function toggleRow(row) {
  const cb = row.querySelector('.item-checkbox');
  cb.checked = !cb.checked;
  updateCount();
}

function updateCount() {
  const count = document.querySelectorAll('.item-checkbox:checked').length;
  document.getElementById('count').textContent = count;
  document.getElementById('submit-btn').disabled = count < 2;
  document.getElementById('min-warning').style.display = count > 0 && count < 2 ? 'block' : 'none';
}

document.querySelectorAll('.item-checkbox').forEach(cb => cb.addEventListener('change', updateCount));
</script>
