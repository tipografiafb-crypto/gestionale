<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item active"><%= @order.external_order_code %></li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <h1>Order: <%= @order.external_order_code %></h1>
  </div>
  <div class="col-md-4 text-end">
    <form action="/orders/<%= @order.id %>" method="post" class="d-inline" onsubmit="return confirm('Sei sicuro? Eliminerai completamente questo ordine.');">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-danger">
        üóë Delete
      </button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <strong>Order Information</strong>
      </div>
      <div class="card-body">
        <table class="table table-sm table-borderless">
          <tr>
            <th>ID:</th>
            <td><%= @order.id %></td>
          </tr>
          <tr>
            <th>External Code:</th>
            <td><strong><%= @order.external_order_code %></strong></td>
          </tr>
          <tr>
            <th>Store:</th>
            <td><%= @order.store.code %> (<%= @order.store.name %>)</td>
          </tr>
          <tr>
            <th>Status:</th>
            <td>
              <span class="badge status-badge status-<%= @order.status %>">
                <%= @order.status.gsub('_', ' ').upcase %>
              </span>
            </td>
          </tr>
          <tr>
            <th>Created:</th>
            <td><%= @order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
          <tr>
            <th>Updated:</th>
            <td><%= @order.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <% if @order.switch_job %>
      <div class="card mb-4">
        <div class="card-header">
          <strong>Switch Job</strong>
        </div>
        <div class="card-body">
          <table class="table table-sm table-borderless">
            <tr>
              <th>Job ID:</th>
              <td><%= @order.switch_job.switch_job_id || 'N/A' %></td>
            </tr>
            <tr>
              <th>Status:</th>
              <td><span class="badge bg-secondary"><%= @order.switch_job.status&.upcase %></span></td>
            </tr>
            <% if @order.switch_job.result_preview_url %>
              <tr>
                <th>Preview:</th>
                <td><a href="<%= @order.switch_job.result_preview_url %>" target="_blank">View Preview</a></td>
              </tr>
            <% end %>
          </table>
          <% if @order.switch_job.log.present? %>
            <h6>Log:</h6>
            <div class="log-box"><%= @order.switch_job.log %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h3 class="mt-5 mb-3">Jobs (<%= @order.order_items.count %>)</h3>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead class="table-light">
      <tr>
        <th>SKU / Product</th>
        <th>Quantity</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td>
            <strong><%= item.product&.name || item.sku %></strong><br>
            <small class="text-muted"><%= item.sku %></small>
          </td>
          <td><%= item.quantity %></td>
          <td>
            <% if item.preprint_completed_at && item.print_completed_at %>
              <span class="badge bg-success">‚úì Completed</span>
            <% elsif item.preprint_status == 'failed' || item.print_status == 'failed' %>
              <span class="badge bg-danger">‚úó Failed</span>
            <% elsif item.preprint_status == 'processing' || item.print_status == 'processing' %>
              <span class="badge bg-warning text-dark">‚è≥ Processing</span>
            <% else %>
              <span class="badge bg-secondary">Pending</span>
            <% end %>
          </td>
          <td>
            <a href="/orders/<%= @order.id %>/items/<%= item.id %>" class="btn btn-sm btn-outline-primary">
              üìã Open Job
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
