<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-cube"></i> Gestione Magazzino</h1>
</div>

<div class="card mb-4">
  <div class="card-body">
    <form method="get" action="/inventory">
      <div class="row mb-3">
        <div class="col-md-8">
          <div class="d-flex gap-2">
            <input type="text" class="form-control" name="search" placeholder="Cerca per SKU o nome prodotto..." value="<%= @search_term %>">
            <button type="submit" class="btn btn-primary">Cerca</button>
            <% if @search_term.present? || @status_filter.present? %>
              <a href="/inventory" class="btn btn-outline-secondary">Azzera</a>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="btn-group" role="group">
            <a href="/inventory<%= @search_term ? "?search=#{@search_term}" : "" %>" class="btn <%= !@status_filter ? 'btn-primary' : 'btn-outline-primary' %>">
              <i class="fas fa-cube"></i> Tutti
            </a>
            <button type="submit" name="status" value="disponibili" class="btn <%= @status_filter == 'disponibili' ? 'btn-success' : 'btn-outline-success' %>">
              <i class="fas fa-check"></i> Disponibili
            </button>
            <button type="submit" name="status" value="sottoscorta" class="btn <%= @status_filter == 'sottoscorta' ? 'btn-warning' : 'btn-outline-warning' %>">
              <i class="fas fa-exclamation-triangle"></i> Sottoscorta
            </button>
            <button type="submit" name="status" value="finiti" class="btn <%= @status_filter == 'finiti' ? 'btn-danger' : 'btn-outline-danger' %>">
              <i class="fas fa-times"></i> Finiti
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<% if @inventory_items.empty? %>
  <div class="alert alert-info">
    Nessun prodotto in magazzino
  </div>
<% else %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>SKU</th>
          <th>Nome Prodotto</th>
          <th>Quantità</th>
          <th>Sottoscorta</th>
          <th>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @inventory_items.each do |inv| %>
          <% row_bg = inv.quantity_in_stock == 0 ? 'bg-danger bg-opacity-25' : (inv.quantity_in_stock < inv.product.min_stock_level ? 'bg-warning bg-opacity-25' : '') %>
          <tr class="<%= row_bg %>">
            <td><code><%= inv.product.sku %></code></td>
            <td><strong><%= inv.product.name %></strong></td>
            <td>
              <span class="badge <%= inv.quantity_in_stock == 0 ? 'bg-danger' : (inv.quantity_in_stock < inv.product.min_stock_level ? 'bg-warning text-dark' : 'bg-success') %>">
                <%= inv.quantity_in_stock %>
              </span>
            </td>
            <td><%= inv.product.min_stock_level %></td>
            <td>
              <div style="display: flex; gap: 4px;">
                <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalCarico<%= inv.id %>" title="Carico">⬆️</button>
                <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalScarico<%= inv.id %>" title="Scarico">⬇️</button>
              </div>
            </td>
          </tr>

          <!-- Modal Carico -->
          <div class="modal fade" id="modalCarico<%= inv.id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Carico: <%= inv.product.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/inventory/<%= inv.id %>/add" method="post">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label class="form-label">Quantità da aggiungere</label>
                      <input type="number" class="form-control" name="quantity" min="1" required autofocus>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-success">Aggiungi</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Modal Scarico -->
          <div class="modal fade" id="modalScarico<%= inv.id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Scarico: <%= inv.product.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/inventory/<%= inv.id %>/remove" method="post">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label class="form-label">Quantità da rimuovere (Max: <%= inv.quantity_in_stock %>)</label>
                      <input type="number" class="form-control" name="quantity" min="1" max="<%= inv.quantity_in_stock %>" required autofocus>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-danger">Rimuovi</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
