<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-sync"></i> Flussi di Stampa</h1>
    <a href="/print_flows/new" class="btn btn-primary"><i class="fas fa-plus"></i> Nuovo Flusso</a>
  </div>

  <% if params[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      Flusso <strong><%= params[:success].upcase %></strong> con successo!
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if @flows.empty? %>
    <div class="alert alert-info">Nessun flusso di stampa configurato. <a href="/print_flows/new">Creane uno nuovo</a></div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Nome</th>
            <th>Pre-Stampa</th>
            <th>Stampa</th>
            <th>Prodotti</th>
            <th>Status</th>
            <th>Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @flows.each do |flow| %>
            <tr>
              <td><strong><%= flow.name %></strong></td>
              <td><%= flow.preprint_webhook&.name %><br><code><%= flow.preprint_webhook&.hook_path %></code></td>
              <td><%= flow.print_webhook&.name %><br><code><%= flow.print_webhook&.hook_path %></code></td>
              <td><span class="badge bg-info"><%= flow.products.count %></span></td>
              <td><%= flow.active? ? '<i class="fas fa-check"></i> Attivo' : '<i class="fas fa-pause"></i> Inattivo' %></td>
              <td>
                <a href="/print_flows/<%= flow.id %>/edit" class="btn btn-sm btn-warning"><i class="fas fa-pen"></i> Modifica</a>
                <form action="/print_flows/<%= flow.id %>" method="post" style="display:inline;">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancellare questo flusso?')"><i class="fas fa-trash"></i> Cancella</button>
                </form>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <hr>
  <a href="/" class="btn btn-secondary">‚Üê Torna alla Home</a>
</div>
