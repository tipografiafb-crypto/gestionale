<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>üîÑ Flussi di Stampa</h1>
    <a href="/print_flows/new" class="btn btn-primary">+ Nuovo Flusso</a>
  </div>

  <% if params[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      Flusso <strong><%= params[:success].upcase %></strong> con successo!
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if @flows.empty? %>
    <div class="alert alert-info">Nessun flusso di stampa configurato. <a href="/print_flows/new">Creane uno nuovo</a></div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Nome</th>
            <th>Pre-Stampa Webhook</th>
            <th>Stampa Webhook</th>
            <th>Prodotti</th>
            <th>Status</th>
            <th>Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @flows.each do |flow| %>
            <tr>
              <td><strong><%= flow.name %></strong></td>
              <td><code><%= flow.preprint_hook_path %></code></td>
              <td><code><%= flow.print_hook_path %></code></td>
              <td><span class="badge bg-info"><%= flow.products.count %></span></td>
              <td><%= flow.active? ? '‚úÖ Attivo' : '‚è∏Ô∏è Inattivo' %></td>
              <td>
                <a href="/print_flows/<%= flow.id %>/edit" class="btn btn-sm btn-warning">‚úèÔ∏è Modifica</a>
                <form action="/print_flows/<%= flow.id %>" method="post" style="display:inline;">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancellare questo flusso?')">üóëÔ∏è Cancella</button>
                </form>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <hr>
  <a href="/" class="btn btn-secondary">‚Üê Torna alla Home</a>
</div>
