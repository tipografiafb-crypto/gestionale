<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">üè™ Negozi</h1>
  <a href="/stores/new" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition">+ Nuovo Negozio</a>
</div>

<% if params[:success] %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-green-700 mb-4">
    Negozio <strong><%= params[:success].upcase %></strong> con successo!
  </div>
<% end %>

<% if params[:msg] %>
  <div class="<%= params[:msg] == 'success' ? 'bg-green-50 border border-green-200 text-green-700' : 'bg-red-50 border border-red-200 text-red-700' %> rounded-lg p-4 mb-4">
    <%= params[:text]&.gsub('+', ' ') %>
  </div>
<% end %>

<div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
  <% if @stores.empty? %>
    <div class="p-4 text-gray-600">Nessun negozio configurato. <a href="/stores/new" class="text-blue-600 hover:text-blue-700 font-semibold">Creane uno nuovo</a></div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="bg-gray-100 border-b border-gray-200">
            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Codice</th>
            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Nome</th>
            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Ordini</th>
            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Stato</th>
            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="px-4 py-3"><strong><code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= store.code %></code></strong></td>
              <td class="px-4 py-3"><%= store.name %></td>
              <td class="px-4 py-3"><span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-0.5 rounded-full"><%= store.orders.count %></span></td>
              <td class="px-4 py-3"><%= store.active.nil? || store.active? ? '‚úÖ Attivo' : '‚è∏Ô∏è Inattivo' %></td>
              <td class="px-4 py-3 flex gap-2">
                <a href="/stores/<%= store.id %>/edit" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 px-3 py-1 rounded text-sm font-semibold transition">‚úèÔ∏è Modifica</a>
                <% if store.orders.empty? %>
                  <form action="/stores/<%= store.id %>" method="post" class="inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="bg-red-100 hover:bg-red-200 text-red-700 px-3 py-1 rounded text-sm font-semibold transition" onclick="return confirm('Cancellare questo negozio?')">üóëÔ∏è Cancella</button>
                  </form>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <a href="/" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg font-semibold transition inline-block">‚Üê Torna alla Home</a>
</div>
