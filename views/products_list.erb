<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-8">
      <p class="text-muted">Configura il routing dei prodotti verso i flussi di stampa</p>
    </div>
    <div class="col-md-4 text-end">
      <a href="/products/export" class="btn btn-info">ðŸ“¤ Esporta CSV</a>
      <a href="/products/import" class="btn btn-success"><i class="fas fa-download"></i> Importa da CSV</a>
      <a href="/products/new" class="btn btn-primary"><i class="fas fa-plus"></i> Nuovo Prodotto</a>
    </div>
  </div>

  <% if params[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check"></i> Prodotto <%= params[:success] %> con successo!
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <!-- Search Form -->
  <div class="row mb-3">
    <div class="col-md-12">
      <form method="get" action="/products" class="d-flex gap-2">
        <input type="text" name="search" class="form-control" placeholder="Cerca per SKU, nome prodotto o categoria..." value="<%= @search_term %>">
        <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-search"></i> Cerca</button>
        <% if @search_term.present? %>
          <a href="/products" class="btn btn-outline-secondary"><i class="fas fa-times"></i> Azzera</a>
        <% end %>
      </form>
    </div>
  </div>

  <% if @search_term.present? %>
    <div class="alert alert-info alert-sm">
      Risultati per: <strong><%= @search_term %></strong> (<%= @products.count %> prodotto<%= @products.count != 1 ? 'i' : '' %>)
    </div>
  <% end %>

  <% if @products.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>SKU</th>
            <th>Nome Prodotto</th>
            <th>Categoria</th>
            <th>Flusso</th>
            <th>Note</th>
            <th>Stato</th>
            <th>Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
                <strong><code><%= product.sku %></code></strong>
              </td>
              <td>
                <%= product.name %>
              </td>
              <td>
                <% if product.product_category %>
                  <span class="badge bg-secondary"><%= product.product_category.name %></span>
                <% else %>
                  <span class="text-muted">â€”</span>
                <% end %>
              </td>
              <td>
                <% if product.default_print_flow %>
                  <span class="badge bg-info"><%= product.default_print_flow.name %></span>
                <% else %>
                  <span class="badge bg-warning">Non assegnato</span>
                <% end %>
              </td>
              <td>
                <small><%= product.notes.present? ? product.notes : 'â€”' %></small>
              </td>
              <td>
                <% if product.active %>
                  <span class="badge bg-success"><i class="fas fa-check"></i> Attivo</span>
                <% else %>
                  <span class="badge bg-danger">âœ— Inattivo</span>
                <% end %>
              </td>
              <td>
                <a href="/products/<%= product.id %>/edit" class="btn btn-sm btn-outline-primary">âœŽ Modifica</a>
                <button class="btn btn-sm btn-outline-info" onclick="duplicateProduct(<%= product.id %>)"><i class="fas fa-copy"></i> Duplica</button>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteProduct(<%= product.id %>)"><i class="fas fa-trash"></i> Elimina</button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      ðŸ“­ Nessun prodotto registrato. <a href="/products/new">Crea il primo prodotto</a>
    </div>
  <% end %>
</div>

<script>
function duplicateProduct(id) {
  fetch('/products/' + id + '/duplicate', { method: 'POST' })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        location.href = '/products?success=duplicated';
      } else {
        alert('Errore: ' + (data.error || 'Duplicazione fallita'));
      }
    })
    .catch(err => alert('Errore: ' + err));
}

function deleteProduct(id) {
  if (confirm('Sei sicuro? Eliminerai questo prodotto dal routing.')) {
    fetch('/products/' + id, { method: 'DELETE' })
      .then(() => location.href = '/products?success=deleted');
  }
}
</script>
