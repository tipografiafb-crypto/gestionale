<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">ğŸ”§ Macchine da Stampa</h1>
    <p class="text-gray-600 mt-2">Gestione hardware e configurazione macchine</p>
  </div>
  <a href="/admin/print_machines/new" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition">
    â• Nuova Macchina
  </a>
</div>

<% if params[:msg] == 'success' %>
  <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded">
    <p class="text-green-800"><%= params[:text] %></p>
  </div>
<% elsif params[:msg] == 'error' %>
  <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded">
    <p class="text-red-800"><%= params[:text] %></p>
  </div>
<% end %>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <% if @machines.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-100 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Nome</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Descrizione</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Stato</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Flussi Collegati</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @machines.each do |machine| %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="px-6 py-4 font-semibold text-gray-900"><%= machine.name %></td>
              <td class="px-6 py-4 text-gray-700"><%= machine.description || 'â€”' %></td>
              <td class="px-6 py-4">
                <% if machine.active %>
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold">Attiva</span>
                <% else %>
                  <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs font-semibold">Inattiva</span>
                <% end %>
              </td>
              <td class="px-6 py-4"><span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-semibold"><%= machine.print_flows.count %></span></td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <a href="/admin/print_machines/<%= machine.id %>/edit" class="text-blue-600 hover:text-blue-800 font-medium text-sm">âœï¸</a>
                  <a href="/admin/print_machines/<%= machine.id %>/link_flows" class="text-blue-600 hover:text-blue-800 font-medium text-sm">ğŸ”—</a>
                  <form action="/admin/print_machines/<%= machine.id %>" method="post" class="inline" onsubmit="return confirm('Eliminare questa macchina?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="text-red-600 hover:text-red-800 font-medium text-sm">ğŸ—‘</button>
                  </form>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-8 text-center">
      <p class="text-gray-500">Nessuna macchina configurata.</p>
      <a href="/admin/print_machines/new" class="text-blue-600 hover:text-blue-800 font-medium mt-2 inline-block">Crea la prima macchina â†’</a>
    </div>
  <% end %>
</div>
