<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">ğŸ“‚ Categorie Prodotti</h1>
  <a href="/product_categories/new" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition">+ Nuova Categoria</a>
</div>

<% if params[:success] %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-green-700 mb-4">
    Categoria <strong><%= params[:success].upcase %></strong> con successo!
  </div>
<% end %>

<% if @categories.empty? %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-blue-700">Nessuna categoria creata. <a href="/product_categories/new" class="font-semibold hover:underline">Creane una nuova</a></div>
<% else %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm">
    <table class="w-full">
      <thead>
        <tr class="bg-gray-100 border-b border-gray-200">
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Nome</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Descrizione</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Prodotti</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Stato</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
            <td class="px-4 py-3"><strong><%= category.name %></strong></td>
            <td class="px-4 py-3 text-gray-600"><%= category.description %></td>
            <td class="px-4 py-3"><span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-0.5 rounded-full"><%= category.product_count %></span></td>
            <td class="px-4 py-3"><%= category.active? ? 'âœ… Attiva' : 'â¸ï¸ Inattiva' %></td>
            <td class="px-4 py-3 flex gap-2">
              <a href="/product_categories/<%= category.id %>/edit" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 px-3 py-1 rounded text-sm font-semibold transition">âœï¸ Modifica</a>
              <form action="/product_categories/<%= category.id %>" method="post" class="inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="bg-red-100 hover:bg-red-200 text-red-700 px-3 py-1 rounded text-sm font-semibold transition" onclick="return confirm('Cancellare questa categoria?')">ğŸ—‘ï¸ Cancella</button>
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<div class="mt-4">
  <a href="/" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg font-semibold transition inline-block">â† Torna alla Home</a>
</div>
