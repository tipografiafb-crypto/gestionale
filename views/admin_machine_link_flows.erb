<div class="max-w-3xl mx-auto">
  <div>
    <h2 class="text-3xl font-bold mb-2">ðŸ”— Collega Macchina a Flussi di Stampa</h2>
    <p class="text-gray-600 mb-6">Macchina: <strong><%= @machine.name %></strong></p>

    <form action="/admin/print_machines/<%= @machine.id %>/link_flows" method="post" class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
      <p class="text-sm font-semibold text-gray-700 mb-4">Seleziona i flussi di stampa a cui questa macchina deve essere disponibile:</p>

      <div class="space-y-2">
        <% @print_flows.each do |flow| %>
          <label class="flex items-start gap-3 p-3 bg-gray-50 rounded border border-gray-200 hover:bg-gray-100 cursor-pointer">
            <input class="mt-1 border border-gray-300 rounded" type="checkbox" name="flow_ids[]" 
                   value="<%= flow.id %>" id="flow_<%= flow.id %>"
                   <%= 'checked' if @linked_flow_ids.include?(flow.id) %>>
            <div>
              <strong class="text-sm"><%= flow.name %></strong>
              <br><small class="text-gray-600"><%= flow.products.count %> prodotti</small>
            </div>
          </label>
        <% end %>
      </div>

      <div class="flex gap-3 mt-6">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition">ðŸ’¾ Salva Associazioni</button>
        <a href="/admin/print_machines" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg font-semibold transition inline-block">Annulla</a>
      </div>
    </form>
  </div>
</div>
