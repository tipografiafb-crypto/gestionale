<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">ðŸ”— Switch Webhooks</h1>
    <p class="text-gray-600 mt-2">Registra i tuoi endpoint Switch qui</p>
  </div>
  <a href="/webhooks/new" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition">
    âž• Nuovo Webhook
  </a>
</div>

<% if params[:success] %>
  <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded">
    <p class="text-green-800">âœ“ Webhook <%= params[:success] %> con successo!</p>
  </div>
<% end %>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <% if @webhooks.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-100 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Nome</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Hook Path</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">URL Completo</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Negozio</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @webhooks.each do |webhook| %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="px-6 py-4 font-semibold text-gray-900"><%= webhook.name %></td>
              <td class="px-6 py-4"><code class="bg-gray-100 px-2 py-1 rounded text-xs font-mono"><%= webhook.hook_path %></code></td>
              <td class="px-6 py-4"><code class="bg-gray-100 px-2 py-1 rounded text-xs font-mono truncate"><%= webhook.webhook_url %></code></td>
              <td class="px-6 py-4">
                <% if webhook.store %>
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold"><%= webhook.store.name %></span>
                <% else %>
                  <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs font-semibold">Globale</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <a href="/webhooks/<%= webhook.id %>/edit" class="text-blue-600 hover:text-blue-800 font-medium text-sm">âœŽ Modifica</a>
                  <button onclick="deleteWebhook(<%= webhook.id %>)" class="text-red-600 hover:text-red-800 font-medium text-sm">ðŸ—‘ Elimina</button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-8 text-center">
      <p class="text-gray-500">ðŸ“­ Nessun webhook registrato.</p>
      <a href="/webhooks/new" class="text-blue-600 hover:text-blue-800 font-medium mt-2 inline-block">Crea il primo webhook â†’</a>
    </div>
  <% end %>
</div>

<script>
function deleteWebhook(id) {
  if (confirm('Sei sicuro? Eliminerai questo webhook.')) {
    fetch('/webhooks/' + id, { method: 'DELETE' })
      .then(() => location.href = '/webhooks?success=deleted');
  }
}
</script>
