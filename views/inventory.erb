<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">üì¶ Gestione Magazzino</h1>
</div>

<div class="bg-white rounded-lg border border-gray-200 shadow-sm p-4 mb-4">
  <form method="get" action="/inventory">
    <div class="mb-4">
      <div class="flex gap-2">
        <input type="text" class="flex-1 border border-gray-300 rounded px-3 py-2 text-sm" name="search" placeholder="Cerca per SKU o nome prodotto..." value="<%= @search_term %>">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-semibold transition">Cerca</button>
        <% if @search_term.present? || @status_filter.present? %>
          <a href="/inventory" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded font-semibold transition">Azzera</a>
        <% end %>
      </div>
    </div>

    <div class="flex gap-1 flex-wrap">
      <a href="/inventory<%= @search_term ? "?search=#{@search_term}" : "" %>" class="<%= !@status_filter ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %> px-3 py-2 rounded font-semibold transition">
        üì¶ Tutti
      </a>
      <button type="submit" name="status" value="disponibili" class="<%= @status_filter == 'disponibili' ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %> px-3 py-2 rounded font-semibold transition">
        ‚úì Disponibili
      </button>
      <button type="submit" name="status" value="sottoscorta" class="<%= @status_filter == 'sottoscorta' ? 'bg-yellow-500 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %> px-3 py-2 rounded font-semibold transition">
        ‚ö†Ô∏è Sottoscorta
      </button>
      <button type="submit" name="status" value="finiti" class="<%= @status_filter == 'finiti' ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %> px-3 py-2 rounded font-semibold transition">
        ‚úï Finiti
      </button>
    </div>
  </form>
</div>

<% if @inventory_items.empty? %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-blue-700">
    Nessun prodotto in magazzino
  </div>
<% else %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm">
    <table class="w-full">
      <thead>
        <tr class="bg-gray-100 border-b border-gray-200">
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">SKU</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Nome Prodotto</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Quantit√†</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Sottoscorta</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @inventory_items.each do |inv| %>
          <% row_bg = inv.quantity_in_stock == 0 ? 'bg-red-50' : (inv.quantity_in_stock < inv.product.min_stock_level ? 'bg-yellow-50' : '') %>
          <tr class="<%= row_bg %> border-b border-gray-200 hover:bg-gray-50 transition">
            <td class="px-4 py-3"><code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= inv.product.sku %></code></td>
            <td class="px-4 py-3"><strong><%= inv.product.name %></strong></td>
            <td class="px-4 py-3">
              <span class="<%= inv.quantity_in_stock == 0 ? 'bg-red-100 text-red-700' : (inv.quantity_in_stock < inv.product.min_stock_level ? 'bg-yellow-100 text-yellow-700' : 'bg-green-100 text-green-700') %> text-xs font-semibold px-2 py-0.5 rounded-full">
                <%= inv.quantity_in_stock %>
              </span>
            </td>
            <td class="px-4 py-3"><%= inv.product.min_stock_level %></td>
            <td class="px-4 py-3 flex gap-2">
              <button class="bg-green-100 hover:bg-green-200 text-green-700 px-2 py-1 rounded text-sm font-semibold transition" data-bs-toggle="modal" data-bs-target="#modalCarico<%= inv.id %>" title="Carico">‚¨ÜÔ∏è</button>
              <button class="bg-red-100 hover:bg-red-200 text-red-700 px-2 py-1 rounded text-sm font-semibold transition" data-bs-toggle="modal" data-bs-target="#modalScarico<%= inv.id %>" title="Scarico">‚¨áÔ∏è</button>
            </td>
          </tr>

          <!-- Modal Carico -->
          <div class="modal fade" id="modalCarico<%= inv.id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Carico: <%= inv.product.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/inventory/<%= inv.id %>/add" method="post">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label class="form-label">Quantit√† da aggiungere</label>
                      <input type="number" class="form-control" name="quantity" min="1" required autofocus>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-success">Aggiungi</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Modal Scarico -->
          <div class="modal fade" id="modalScarico<%= inv.id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Scarico: <%= inv.product.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/inventory/<%= inv.id %>/remove" method="post">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label class="form-label">Quantit√† da rimuovere (Max: <%= inv.quantity_in_stock %>)</label>
                      <input type="number" class="form-control" name="quantity" min="1" max="<%= inv.quantity_in_stock %>" required autofocus>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-danger">Rimuovi</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
