<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">üîÑ Flussi di Stampa</h1>
  <a href="/print_flows/new" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition">+ Nuovo Flusso</a>
</div>

<% if params[:success] %>
  <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-green-700 mb-4">
    Flusso <strong><%= params[:success].upcase %></strong> con successo!
  </div>
<% end %>

<% if @flows.empty? %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-blue-700">Nessun flusso di stampa configurato. <a href="/print_flows/new" class="font-semibold hover:underline">Creane uno nuovo</a></div>
<% else %>
  <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm">
    <table class="w-full">
      <thead>
        <tr class="bg-gray-100 border-b border-gray-200">
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Nome</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Pre-Stampa</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Stampa</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Prodotti</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Stato</th>
          <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @flows.each do |flow| %>
          <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
            <td class="px-4 py-3"><strong><%= flow.name %></strong></td>
            <td class="px-4 py-3 text-sm"><%= flow.preprint_webhook&.name %><br><code class="text-xs bg-gray-100 px-1 py-0.5 rounded"><%= flow.preprint_webhook&.hook_path %></code></td>
            <td class="px-4 py-3 text-sm"><%= flow.print_webhook&.name %><br><code class="text-xs bg-gray-100 px-1 py-0.5 rounded"><%= flow.print_webhook&.hook_path %></code></td>
            <td class="px-4 py-3"><span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-0.5 rounded-full"><%= flow.products.count %></span></td>
            <td class="px-4 py-3"><%= flow.active? ? '‚úÖ Attivo' : '‚è∏Ô∏è Inattivo' %></td>
            <td class="px-4 py-3 flex gap-2">
              <a href="/print_flows/<%= flow.id %>/edit" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 px-3 py-1 rounded text-sm font-semibold transition">‚úèÔ∏è Modifica</a>
              <form action="/print_flows/<%= flow.id %>" method="post" class="inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="bg-red-100 hover:bg-red-200 text-red-700 px-3 py-1 rounded text-sm font-semibold transition" onclick="return confirm('Cancellare questo flusso?')">üóëÔ∏è Cancella</button>
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<div class="mt-4">
  <a href="/" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg font-semibold transition inline-block">‚Üê Torna alla Home</a>
</div>
