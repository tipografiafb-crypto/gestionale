<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">üì¶ Prodotti (SKU)</h1>
    <p class="text-gray-600 mt-2">Configura il routing dei prodotti verso i flussi di stampa</p>
  </div>
  <a href="/products/new" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition">
    ‚ûï Nuovo Prodotto
  </a>
</div>

<% if params[:success] %>
  <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded">
    <p class="text-green-800">‚úì Prodotto <%= params[:success] %> con successo!</p>
  </div>
<% end %>

<!-- Search Form -->
<div class="mb-6 bg-white rounded-lg shadow-sm p-6">
  <form method="get" action="/products" class="flex gap-2">
    <input type="text" name="search" class="flex-1 border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Cerca per SKU, nome prodotto o categoria..." value="<%= @search_term %>">
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition">üîç Cerca</button>
    <% if @search_term.present? %>
      <a href="/products" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg text-sm font-medium transition">‚úï Azzera</a>
    <% end %>
  </form>
</div>

<% if @search_term.present? %>
  <div class="mb-4 bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
    <p class="text-blue-800">Risultati per: <strong><%= @search_term %></strong> (<%= @products.count %> prodotto<%= @products.count != 1 ? 'i' : '' %>)</p>
  </div>
<% end %>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <% if @products.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-100 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">SKU</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Nome Prodotto</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Categoria</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Flusso</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Stato</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="px-6 py-4"><code class="bg-gray-100 px-2 py-1 rounded text-xs font-mono font-bold"><%= product.sku %></code></td>
              <td class="px-6 py-4 text-gray-900"><%= product.name %></td>
              <td class="px-6 py-4">
                <% if product.product_category %>
                  <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs font-semibold"><%= product.product_category.name %></span>
                <% else %>
                  <span class="text-gray-400">‚Äî</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if product.default_print_flow %>
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold"><%= product.default_print_flow.name %></span>
                <% else %>
                  <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs font-semibold">Non assegnato</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if product.active %>
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold">‚úì Attivo</span>
                <% else %>
                  <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs font-semibold">‚úó Inattivo</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <a href="/products/<%= product.id %>/edit" class="text-blue-600 hover:text-blue-800 font-medium text-sm">‚úé</a>
                  <button onclick="duplicateProduct(<%= product.id %>)" class="text-blue-600 hover:text-blue-800 font-medium text-sm">üìã</button>
                  <button onclick="deleteProduct(<%= product.id %>)" class="text-red-600 hover:text-red-800 font-medium text-sm">üóë</button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-8 text-center">
      <p class="text-gray-500">üì≠ Nessun prodotto registrato.</p>
      <a href="/products/new" class="text-blue-600 hover:text-blue-800 font-medium mt-2 inline-block">Crea il primo prodotto ‚Üí</a>
    </div>
  <% end %>
</div>

<script>
function duplicateProduct(id) {
  fetch('/products/' + id + '/duplicate', { method: 'POST' })
    .then(res => res.json())
    .then(data => {
      if (data.success) location.href = '/products?success=duplicated';
      else alert('Errore: ' + (data.error || 'Duplicazione fallita'));
    })
    .catch(err => alert('Errore: ' + err));
}
function deleteProduct(id) {
  if (confirm('Sei sicuro? Eliminerai questo prodotto dal routing.')) {
    fetch('/products/' + id, { method: 'DELETE' })
      .then(() => location.href = '/products?success=deleted');
  }
}
</script>
