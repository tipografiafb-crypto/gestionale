<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
      <li class="breadcrumb-item active"><%= @order.external_order_code %></li>
    </ol>
  </nav>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <h1>Order: <%= @order.external_order_code %></h1>
  </div>
  <div class="col-md-4 text-end">
    <form action="/orders/<%= @order.id %>/download" method="post" class="d-inline">
      <button type="submit" class="btn btn-primary" <%= 'disabled' if @order.assets_downloaded? %>>
        üì• Download Images
      </button>
    </form>
    <form action="/orders/<%= @order.id %>" method="post" class="d-inline" onsubmit="return confirm('Sei sicuro? Eliminerai completamente questo ordine.');">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-danger">
        üóë Delete
      </button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <strong>Order Information</strong>
      </div>
      <div class="card-body">
        <table class="table table-sm table-borderless">
          <tr>
            <th>ID:</th>
            <td><%= @order.id %></td>
          </tr>
          <tr>
            <th>External Code:</th>
            <td><strong><%= @order.external_order_code %></strong></td>
          </tr>
          <tr>
            <th>Store:</th>
            <td><%= @order.store.code %> (<%= @order.store.name %>)</td>
          </tr>
          <tr>
            <th>Status:</th>
            <td>
              <span class="badge status-badge status-<%= @order.status %>">
                <%= @order.status.gsub('_', ' ').upcase %>
              </span>
            </td>
          </tr>
          <tr>
            <th>Created:</th>
            <td><%= @order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
          <tr>
            <th>Updated:</th>
            <td><%= @order.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <% if @order.switch_job %>
      <div class="card mb-4">
        <div class="card-header">
          <strong>Switch Job</strong>
        </div>
        <div class="card-body">
          <table class="table table-sm table-borderless">
            <tr>
              <th>Job ID:</th>
              <td><%= @order.switch_job.switch_job_id || 'N/A' %></td>
            </tr>
            <tr>
              <th>Status:</th>
              <td><span class="badge bg-secondary"><%= @order.switch_job.status.upcase %></span></td>
            </tr>
            <% if @order.switch_job.result_preview_url %>
              <tr>
                <th>Preview:</th>
                <td><a href="<%= @order.switch_job.result_preview_url %>" target="_blank">View Preview</a></td>
              </tr>
            <% end %>
          </table>
          <% if @order.switch_job.log.present? %>
            <h6>Log:</h6>
            <div class="log-box"><%= @order.switch_job.log %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if params[:msg] %>
  <div class="alert alert-<%= params[:msg] == 'success' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
    <%= params[:text]&.gsub('+', ' ') %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>

<h3>Order Items (<%= @order.order_items.count %>)</h3>

<% @order.order_items.each_with_index do |item, index| %>
  <div class="card mb-3">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <strong>Item #<%= index + 1 %>:</strong> <%= item.sku %> (Qty: <%= item.quantity %>)
        </div>
        <div class="btn-group btn-group-sm">
          <form action="/orders/<%= @order.id %>/items/<%= item.id %>/send_preprint" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-warning" 
                    <%= 'disabled' unless item.can_send_to_preprint? %>
                    title="<%= item.can_send_to_preprint? ? 'Invia a pre-stampa' : 'Immagini non ancora scaricate' %>">
              üñ®Ô∏è Pre-stampa
              <% if item.preprint_status != 'pending' %>
                <span class="badge <%= item.preprint_status == 'completed' ? 'bg-success' : 'bg-secondary' %>">
                  <%= item.preprint_status.upcase %>
                </span>
              <% end %>
            </button>
          </form>
          
          <form action="/orders/<%= @order.id %>/items/<%= item.id %>/send_print" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-success" 
                    <%= 'disabled' unless item.can_send_to_print? %>
                    title="<%= item.can_send_to_print? ? 'Invia in stampa' : 'Completare prima la pre-stampa' %>">
              ‚úÖ Stampa
              <% if item.print_status != 'pending' %>
                <span class="badge <%= item.print_status == 'completed' ? 'bg-success' : 'bg-secondary' %>">
                  <%= item.print_status.upcase %>
                </span>
              <% end %>
            </button>
          </form>
          
          <form action="/orders/<%= @order.id %>/items/<%= item.id %>/reset" method="post" class="d-inline" onsubmit="return confirm('Reimpostare questo item?');">
            <button type="submit" class="btn btn-sm btn-outline-secondary" 
                    <%= 'disabled' if item.preprint_status == 'pending' && item.print_status == 'pending' %>
                    title="Reimposta a inizio workflow">
              üîÑ Reset
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Original Assets -->
        <div class="col-md-6">
          <h6>Assets (<%= item.assets.count %>):</h6>
          <% if item.assets.any? %>
            <div class="row">
              <% item.assets.each do |asset| %>
                <div class="col-md-6 mb-3">
                  <div class="card">
                    <div class="card-body text-center">
                      <% if asset.downloaded? && asset.local_path_full.to_s.match?(/\.(png|jpg|jpeg|gif|webp)$/i) %>
                        <img src="/file/<%= asset.id %>" alt="<%= asset.asset_type %>" class="asset-preview mb-2">
                      <% else %>
                        <div class="asset-preview mb-2 d-flex align-items-center justify-content-center" style="background-color: #f0f0f0;">
                          <span>üìÑ</span>
                        </div>
                      <% end %>
                      <small class="d-block"><strong><%= asset.asset_type || 'N/A' %></strong></small>
                      <% if asset.downloaded? %>
                        <span class="badge bg-success">Downloaded</span>
                      <% else %>
                        <span class="badge bg-warning text-dark">Pending</span>
                      <% end %>
                      <div class="mt-2">
                        <a href="<%= asset.original_url %>" target="_blank" class="btn btn-sm btn-outline-primary">URL</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No assets for this item.</p>
          <% end %>
        </div>

        <!-- Switch Preview -->
        <div class="col-md-6">
          <h6>üìä Anteprima Switch:</h6>
          <% if item.preprint_job&.result_preview_url %>
            <div class="card mb-3">
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Pre-stampa</h6>
                <img src="<%= item.preprint_job.result_preview_url %>" alt="Preprint Preview" class="img-fluid mb-2">
                <a href="<%= item.preprint_job.result_preview_url %>" target="_blank" class="btn btn-sm btn-outline-primary w-100">Apri Preview</a>
              </div>
            </div>
          <% end %>
          <% if item.print_job&.result_preview_url %>
            <div class="card mb-3">
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Stampa</h6>
                <img src="<%= item.print_job.result_preview_url %>" alt="Print Preview" class="img-fluid mb-2">
                <a href="<%= item.print_job.result_preview_url %>" target="_blank" class="btn btn-sm btn-outline-primary w-100">Apri Preview</a>
              </div>
            </div>
          <% end %>
          <% if !item.preprint_job&.result_preview_url && !item.print_job&.result_preview_url %>
            <p class="text-muted">Nessuna anteprima disponibile.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
