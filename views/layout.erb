      <div class="bg-white border-b border-gray-200 shadow-sm">
        <div class="px-8 py-4">
          <h2 class="text-xl font-semibold text-gray-900">Print Order Orchestrator</h2>
          <p class="text-sm text-gray-500">Gestione ordini e flussi di stampa</p>
        </div>
      </div>

      <!-- Content -->
      <div class="flex-1 overflow-auto">
        <div class="p-8">
          <%= yield %>
