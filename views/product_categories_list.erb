<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ğŸ“‚ Categorie Prodotti</h1>
    <a href="/product_categories/new" class="btn btn-primary">+ Nuova Categoria</a>
  </div>

  <% if params[:success] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      Categoria <strong><%= params[:success].upcase %></strong> con successo!
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if @categories.empty? %>
    <div class="alert alert-info">Nessuna categoria creata. <a href="/product_categories/new">Creane una nuova</a></div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Nome</th>
            <th>Descrizione</th>
            <th>Prodotti</th>
            <th>Status</th>
            <th>Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><strong><%= category.name %></strong></td>
              <td><%= category.description %></td>
              <td><span class="badge bg-info"><%= category.product_count %></span></td>
              <td><%= category.active? ? 'âœ… Attiva' : 'â¸ï¸ Inattiva' %></td>
              <td>
                <a href="/product_categories/<%= category.id %>/edit" class="btn btn-sm btn-warning">âœï¸ Modifica</a>
                <form action="/product_categories/<%= category.id %>" method="post" style="display:inline;">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancellare questa categoria?')">ğŸ—‘ï¸ Cancella</button>
                </form>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <hr>
  <a href="/" class="btn btn-secondary">â† Torna alla Home</a>
</div>
